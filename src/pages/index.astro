---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import { Image } from "astro:assets";
import { index_img } from "../config/index_img";
import "../styles/global.css";

const head = {
  title: "Ender Talks",
  description: ""
}
---

<html>
    <BaseHead title={head.title} description={""} />
    <Header />

    <div class="grid">
        {
            index_img.map((item) => {
                return (
                    <div class="content">
                        <Image class="img" src={item.img} alt={item.title} />
                        <div class="text">
                            <span class="title-box">
                                <span class="title">{item.title} </span>
                                <span class="date">{item.date}</span>
                            </span>

                            <span class="des">
                                {item.description}@{item.location}
                            </span>
                        </div>
                    </div>
                );
            })
        }
    </div>

    <Footer />
</html>

<style>
    .grid {
        column-gap: 32px;
        padding: 10px;
    }
    
    @media (min-width: 1000px) {
      .grid {
        column-count: 3; 
      }
    }

    .content {
        break-inside: avoid; 
        margin-bottom: 16px;
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 100%;
        max-height: 100%;
    }

    .img {
        object-fit: contain;
    }

    .text {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .title-box {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .title {
        font-size: 20px;
    }

    .date {
        font-size: 15px;
        color: rgb(var(--gray));
    }

    .des {
        font-style: italic;
        color: rgb(var(--gray));
        font-size: 15px;
    }
</style>
